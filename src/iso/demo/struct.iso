DEF "PLAYER",   2            REM "Define player structure"
DEF "PLAYER.X", 0
DEF "PLAYER.Y", 1

RUN "MAIN"
RUN "PROGRAM.EXIT"

FUN "MAIN"
	POS VAR "PLAYER_1"   SET REM "Allocate player struct"
	POS REF "PLAYER" ADD HOP

	NUM 420
	VAR "PLAYER_1"       GET
	REF "PLAYER.X"   ADD SET REM "PLAYER_1.X = 420"
	
	NUM 69
	VAR "PLAYER_1"       GET
	REF "PLAYER.Y"   ADD SET REM "PLAYER_1.Y = 69"
